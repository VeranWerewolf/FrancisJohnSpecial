<UserControl x:Class="GameScoreCalculator.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <ScrollViewer>
        <StackPanel Margin="10" TextBlock.FontSize="14">
            <TextBlock TextWrapping="Wrap" Margin="0,10">
                
                <Run FontWeight="Bold" Text="FJ Game Score Calculator"/>
                <LineBreak/><LineBreak/>
                This application was made as for fun based on the metrics created by Francis John:
                <LineBreak/>
                <Hyperlink NavigateUri="https://www.youtube.com/@FrancisJohnYT" 
                          RequestNavigate="Hyperlink_RequestNavigate">
                    Francis John YT
                </Hyperlink>
                <LineBreak/>
                <Hyperlink NavigateUri="https://discord.com/invite/nS5UFgd" 
                          RequestNavigate="Hyperlink_RequestNavigate">
                    Discord
                </Hyperlink>
                <LineBreak/><LineBreak/>
                How the score is calculated? Visit 
                <Hyperlink NavigateUri="https://youtu.be/lTn3ERK_KV8?si=J-f9gDmljE6mDkZQ" 
                          RequestNavigate="Hyperlink_RequestNavigate">
                    This video
                </Hyperlink>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold">Options:</Run>
                <LineBreak/>
                - Ignore processed (days): Skip games processed in the last N days. 
                <LineBreak/>
                - Min Reviews: Exclude games with fewer than this many reviews.
                <LineBreak/>
                - Add New: Discover and add new games not in the database (not detailed or excluded)
                <LineBreak/>
                - Update Existing: Refresh details and reviews for existing games (older than ignored days)
                <LineBreak/>
                - Update Excluded By Review Threshold: Re-check games previously excluded for low reviews (older than ignored days)
                <LineBreak/>
                - Update Excluded By AppDetails: Re-check games with previously missing details (older than ignored days)
                <LineBreak/>
                - Create Export File: Generate CSV file with calculated scores
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold">GitHub Repository:</Run>
                Made by Veran
                <Hyperlink NavigateUri="https://github.com/VeranWerewolf/FrancisJohnSpecial" 
                          RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>